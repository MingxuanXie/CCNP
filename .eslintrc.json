{
  "extends": "next/core-web-vitals",
  "rules": {
    "semi": [2, "never"],
    "space-before-blocks": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "object-curly-spacing": ["error", "always"],
    // "indent": ["error", 2, { "ignoredNodes": ["ConditionalExpression"] }],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignorePattern": "className"
      }
    ]
  }
}
